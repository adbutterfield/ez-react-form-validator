{
  "name": "ez-react-form-validator",
  "version": "1.0.0",
  "description": "Easy to use, slightly opinionated, form validator for React using hooks.",
  "main": "dist/ez-react-form-validator.js",
  "module": "dist/ez-react-form-validator.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:modern && npm run build:min",
    "build:modern": "rollup -c",
    "build:min": "rollup -c rollup.min.config.js",
    "eslint": "eslint --ext .ts,.tsx ./src",
    "test": "jest --config jest.config.js"
  },
  "keywords": [
    "form-validation",
    "form-validator",
    "form",
    "forms",
    "hooks",
    "react-hooks",
    "react",
    "typescript",
    "validation",
    "validator"
  ],
  "author": "Adam Butterfield",
  "license": "MIT",
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.3.0",
    "@testing-library/react": "^10.0.2",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^25.1.4",
    "@types/react": "^16.9.29",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^4.2.3",
    "jest": "^25.2.4",
    "prettier": "^2.0.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rollup": "^2.3.2",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "ts-jest": "^25.3.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "npm run eslint",
      "pre=push": "npm test"
    }
  }
}
