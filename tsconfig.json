{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "strict": true,
    "target": "es5",
    "typeRoots": [
      "./types.d.ts",
      "./node_modules/@types"
    ],
  },
  "include": [
    "src", "types.d.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}